{
    // "search.exclude": {
    //     "wordpress/wp-content/plugins/": true
    // },
    "editor.insertSpaces": true, // 強制輸入空白
    "editor.detectIndentation": false, // 關閉縮排偵測
    "editor.tabSize": 2,
    "editor.formatOnSave": false,
    "eslint.options": {
        "extensions": [".html", ".js", ".cjs", ".vue"]
    },
    "eslint.workingDirectories": ["."],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true
    },
    "stylelint.snippet": ["css", "scss", "vue"],
    "stylelint.validate": ["css", "scss", "vue"],
    "[php]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[twig]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "white",
        "type": "text"
    },
    "todo-tree.general.tags": ["TODO", "FIXME", "BUG", "API", "MOCK", "REF", "NOTICE"],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "background": "#f0be29"
        },
        "FIXME": {
            "icon": "$(flame)",
            "background": "#f765ab"
        },
        "BUG": {
            "icon": "$(bug)",
            "background": "#ff0000"
        },
        "API": {
            "icon": "$(cloud-download)",
            "background": "#D94DFF"
        },
        "MOCK": {
            "icon": "$(squirrel)",
            "background": "#4cf21a"
        },
        "REF": {
            "icon": "$(hubot)",
            "background": "#00ddff"
        },
        "NOTICE": {
            "background": "#ec9669"
        }
    },
    "todo-tree.filtering.excludeGlobs": ["**/node_modules/*", "**/wp-content/plugins/*"],
}
